<resources>
    <style name="ActionBar.Solid.Mytheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_mytheme</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mytheme</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mytheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Mytheme</item>
		<item name="titleTextStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="ActionBar.Transparent.Mytheme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_mytheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Mytheme</item>
    </style>
	
    <style name="MyActionBarStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="PopupMenu.Mytheme" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mytheme</item>	
    </style>
	
    <style name="DropDownListView.Mytheme" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mytheme</item>
    </style>

    <style name="ActionBarTabStyle.Mytheme" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
      <item name="android:background">@drawable/tab_indicator_ab_example</item>
    </style>
	
    <style name="DropDownNav.Mytheme" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mytheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mytheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mytheme</item>
    </style>
    
    <style name="ProgressBar.Mytheme" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mytheme</item>
    </style>
    
    <style name="ActionButton.CloseMode.Mytheme" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mytheme</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mytheme.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Mytheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mytheme</item>
    </style>
    
	<style name="Animation" parent="android:Animation" />
	<style name="Animation.Activity" parent="android:Animation.Activity">
		<item name="android:activityOpenEnterAnimation">@anim/activity_open_from_right</item>
	</style>
		<style name="Animation.Activity.Bottom" parent="android:Animation.Activity">
		<item name="android:activityOpenEnterAnimation">@anim/activity_open_from_bottom</item>
	</style>
</resources>
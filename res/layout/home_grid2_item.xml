<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	>
	
	<jp.gr.java_conf.sakamako.view.CustomImageView android:id="@+id/item_image"
        android:layout_gravity="center|center"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<TextView
		    android:id="@+id/recent_item_price"
		    android:layout_width="80dp"
	    	android:layout_height="wrap_content"
	    	android:background="@color/price_background"
	    	android:textColor="@color/price_textcolor"
	    	android:layout_gravity="bottom|center"
            android:layout_marginBottom="3dp"
            android:textSize="15sp"
            android:singleLine="true"
            android:gravity="center"
            android:text="00000/00000"/>

	<ImageView
        android:id="@+id/icon_avaliability"
        android:layout_width="@dimen/available_icon_size"
        android:layout_height="@dimen/available_icon_size"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/available_icon_margin"
        android:layout_marginBottom="@dimen/available_icon_margin"
        android:background="#FFFFFFFF"
        android:src="@android:drawable/ic_delete" />

</FrameLayout>
